{
  "name": "pertain",
  "version": "1.0.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Automated pub/sub across project dependencies. Run code from any installed package based on declarative rules in package.json",
  "main": "pertainCjs.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/zetlen/pertain.git",
  "keywords": [
    "pub/sub",
    "extensibility",
    "interceptors",
    "di",
    "injection"
  ],
  "scripts": {
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "run-s build test:*",
    "test:lint": "tslint --project . && prettier \"src/**/*.ts\" --list-different",
    "test:unit": "nyc --silent ava",
    "watch": "run-s \"test:unit -- --watch\"",
    "cov": "run-s build test:unit cov:html && open-cli coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:send": "nyc report --reporter=lcov && codecov",
    "cov:unit": "run-s clean build:main && nyc --reporter=lcov ava",
    "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
    "version": "standard-version -a",
    "reset": "git clean -dfx && git reset --hard && npm i",
    "clean": "rimraf build test",
    "prepare-release": "run-s reset test cov:check version"
  },
  "author": "James Zetlen <zetlen@gmail.com",
  "license": "(OSL-3.0 OR AFL-3.0)",
  "bugs": {
    "url": "https://github.com/zetlen/pertain/issues"
  },
  "homepage": "https://github.com/zetlen/pertain",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "debug": "~4.1.1",
    "dot-prop": "^5.2.0",
    "pkg-dir": "^4.1.0",
    "resolve-pkg": "^2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/debug": "^4.1.5",
    "@types/node": "^13.5.1",
    "ava": "2.2.0",
    "codecov": "^3.5.0",
    "git-cz": "^3.3.0",
    "husky": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "open-cli": "^5.0.0",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.1",
    "source-map-support": "^0.5.16",
    "standard-version": "^6.0.1",
    "ts-node": "^8.5.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.15.3",
    "typescript": "^3.5.3"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "failFast": true,
    "files": [
      "src/**/*.spec.ts"
    ],
    "helpers": [
      "**/__*.ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "sources": [
      "src/**/*.ts"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "include": [
      "src/**/*.ts",
      "!**/*.spec.ts",
      "!**/__*.ts"
    ]
  }
}
